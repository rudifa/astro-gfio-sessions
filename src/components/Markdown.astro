---
import { marked } from 'marked';

interface Props {
  markdown: string;
}

const { markdown } = Astro.props;

// console.log(marked(markdown));
---

<style>
  .marked-down {
    padding: 1rem;
    margin: 2px 0;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
    color: white;
  }

  .marked-down a {
    color: #00ffff; /* cyan - no effect nside the marked down html*/
  }
</style>

<div class='marked-down' set:html={marked(markdown)} />
